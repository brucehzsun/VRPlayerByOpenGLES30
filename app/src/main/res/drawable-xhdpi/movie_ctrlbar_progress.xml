<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#FFD3D3D3"
                android:centerY="0.75"
                android:endColor="#FFD3D3D3"
                android:startColor="#FFD3D3D3" />

            <corners android:radius="0dp" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="#FF002D57"
                    android:centerY="0.75"
                    android:endColor="#FF002D57"
                    android:startColor="#FF002D57" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="#FF198BDF"
                    android:centerY="0.75"
                    android:endColor="#FF198BDF"
                    android:startColor="#FF198BDF" />
            </shape>
        </clip>
    </item>

</layer-list>