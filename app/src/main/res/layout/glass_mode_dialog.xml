<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_video_touch_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/magic_dialog_bg"
    android:orientation="vertical"
    android:padding="7dp">

    <TextView
        android:id="@+id/dialog_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:text="@string/glass_mode_dialog_title"
        android:textColor="#1a1a1a"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/magic_dialog_time_bg"
        android:gravity="center">

        <TextView
            android:id="@+id/dialog_left_time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="#167bc6"
            android:textSize="21sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_buy_btn_textview"
        android:layout_width="204dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mojing_buy_btn_selector"
        android:gravity="center"
        android:text="@string/glass_mode_dialog_buy"
        android:textColor="#ffffff"
        android:textSize="13sp" />
    <LinearLayout
        android:id="@+id/dialog_auto_pause_layout"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:id="@+id/dialog_auto_pause_btn_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/mojing_buy_btn_selector"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#ffffff"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/dialog_auto_pause_btn_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/mojing_buy_btn_selector"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="13sp" />

    </LinearLayout>
</LinearLayout>